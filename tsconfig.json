{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],

    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["src/__tests__", "**/*.test.ts", "**/*.spec.ts"]
}
